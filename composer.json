{
  "name": "micro-module/jaeger-php",
  "description": "php client for jaeger",
  "keywords": [
    "jaeger",
    "trace",
    "opentracing"
  ],
  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "require": {
    "php": "^8.0",
    "packaged/thrift": "^0.13",
    "opentracing/opentracing": "~1.0.1",
    "ext-sockets": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Jaeger\\": "src\\Jaeger"
    },
    "files": [
      "src/Jaeger/Constants.php"
    ]
  },
  "scripts": {
    "test": "./vendor/bin/phpunit"
  },
  "autoload-dev": {
    "psr-4": {
      "JagerPhp\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "php-coveralls/php-coveralls": "^1.0"
  }
}
